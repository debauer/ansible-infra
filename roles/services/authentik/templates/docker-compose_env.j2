# The UID and GID of the user used to run paperless in the container. Set this
# to your UID and GID on the host so that you have write access to the
# consumption directory.
PG_PASS={{ lookup('vars', 'vault_' + lxc_container.host + '_authentik_pg_pw') }}
AUTHENTIK_SECRET_KEY={{ lookup('vars', 'vault_' + lxc_container.host + '_authentik_secret_key') }}

AUTHENTIK_ERROR_REPORTING__ENABLED=true

# SMTP Host Emails are sent to
AUTHENTIK_EMAIL__HOST={{ lookup('vars', 'vault_' + lxc_container.host + '_authentik_email_server') }}
AUTHENTIK_EMAIL__PORT=587
# Optionally authenticate (don't add quotation marks to your password)
AUTHENTIK_EMAIL__USERNAME={{ lookup('vars', 'vault_' + lxc_container.host + '_authentik_email_user') }}
AUTHENTIK_EMAIL__PASSWORD={{ lookup('vars', 'vault_' + lxc_container.host + '_authentik_email_pw') }}
# Use StartTLS
AUTHENTIK_EMAIL__USE_TLS=false
# Use SSL
AUTHENTIK_EMAIL__USE_SSL=false
AUTHENTIK_EMAIL__TIMEOUT=10
# Email address authentik will send from, should have a correct @domain
AUTHENTIK_EMAIL__FROM={{ lookup('vars', 'vault_' + lxc_container.host + '_authentik_email_from') }}