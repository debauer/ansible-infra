# Mysql Parameters
MYSQL_PORT_3306_TCP_ADDR=snipe-mysql
MYSQL_PORT_3306_TCP_PORT=3306
MYSQL_ROOT_PASSWORD={{ lookup('vars', 'vault_' + lxc_container.host + '_snipeit_mysql_pw') }}
MYSQL_DATABASE=snipeit
MYSQL_USER=snipeit
MYSQL_PASSWORD={{ lookup('vars', 'vault_' + lxc_container.host + '_snipeit_mysql_pw') }}

# Email Parameters
# - the hostname/IP address of your mailserver
MAIL_DRIVER=smtp
MAIL_PORT_587_TCP_ADDR={{ lookup('vars', 'vault_' + lxc_container.host + '_snipeit_email_server') }}
#the port for the mailserver (probably 587, could be another)
MAIL_PORT_587_TCP_PORT=587
# the default from address, and from name for emails
MAIL_ENV_FROM_ADDR={{ lookup('vars', 'vault_' + lxc_container.host + '_snipeit_email_user') }}
MAIL_ENV_FROM_NAME={{ lookup('vars', 'vault_' + lxc_container.host + '_snipeit_email_from') }}
# - pick 'tls' for SMTP-over-SSL, 'tcp' for unencrypted
MAIL_ENV_ENCRYPTION=tls
# SMTP username and password
MAIL_ENV_USERNAME={{ lookup('vars', 'vault_' + lxc_container.host + '_snipeit_email_user') }}
MAIL_ENV_PASSWORD={{ lookup('vars', 'vault_' + lxc_container.host + '_snipeit_email_pw') }}

# Snipe-IT Settings
APP_ENV=production
APP_DEBUG=false
APP_KEY={{ lookup('vars', 'vault_' + lxc_container.host + '_snipeit_api_key') }}
APP_URL=https://snipeit.acz.space
APP_TIMEZONE=Europe/London # you should change this to your timezone
APP_LOCALE=en # you should change this for the desired language